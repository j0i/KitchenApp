            </ListView>
        </ScrollViewer>
        <Popup
            x:Name="uxOrdersPopup"
            IsOpen="False"
            Grid.Row="0"
            Grid.Column="2"
            HorizontalOffset="100"
            HorizontalAlignment="Center"
            VerticalAlignment="Center">
            <StackPanel
                x:Name="uxOrdersPopUpPanel"
                Height="250"
                Width="320"
                BorderBrush="DarkGray"
                BorderThickness="2"
                Orientation="Vertical"
                Background="#B9B9B9">
                <TextBlock
                    x:Name="lblTableNumber"
                    Foreground="Black"
                    TextAlignment="Left"
                    FontSize="25"
                    Margin="0,15,0,25"
                    FontWeight="SemiBold"
                    HorizontalAlignment="Center"/>
                <TextBlock
                    Text="What would you like to do?"
                    TextWrapping="Wrap"
                    FontSize="20"
                    Foreground="Black"
                    FontWeight="SemiBold"
                    HorizontalAlignment="Center"/>
                <StackPanel
                  x:Name="uxOrdersButtonsPanel"
                  Orientation="Horizontal"
                  Margin="0,60,0,0"
                  HorizontalAlignment="Center"
                  VerticalAlignment="Bottom"
                  Background="#B9B9B9">
                    <Button
                        x:Name="uxGetEmployeeButton"
                        VerticalAlignment="Bottom"
                        HorizontalAlignment="Left"
                        Background="AntiqueWhite"
                        Margin="0,0,10,0"
                        BorderBrush="DimGray"
                        Click="uxGetEmployeeButton_Click"
                        Foreground="Blue"/>
                    <Button
                        x:Name="uxCompleteOrderButton"
                        Content="Complete Order"
                        VerticalAlignment="Bottom"
                        Background="AntiqueWhite"
                        Margin="0,0,10,0"
                        HorizontalAlignment="Right"
                        Click="uxCompleteOrderButton_Click"
                        Foreground="Blue"/>
                    <Button
                        x:Name="uxExitButton"
                        Content="Cancel"
                        VerticalAlignment="Bottom"
                        Background="AntiqueWhite"
                        HorizontalAlignment="Right"
                        Click="uxExitButton_Click"
                        Foreground="Red"/>
                </StackPanel>
            </StackPanel>
        </Popup>
    </Grid>

</Page>
