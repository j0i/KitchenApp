<Page
    x:Class="KitchenApp.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:KitchenApp"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel
            x:Name="uxDetailPanel"
            Grid.Column="0"
            Background="#1fbd85"
            Width="150">
            <TextBlock
                x:Name="lblTime"
                HorizontalTextAlignment="Center"
                Margin="0,15,0,0"
                Foreground="NavajoWhite"
                FontSize="23"
                FontWeight="SemiBold"/>
        </StackPanel>
        <ScrollViewer
            x:Name="uxReceivedOrdersScrollView0"
            Grid.Column="1"
            Background="Tan">
            <ListView x:Name="uxReceivedOrdersControl0"
                      Background="Tan"
                      IsItemClickEnabled="True"
                      ItemClick="uxReceivedOrdersControl0_ItemClick">
                      <ListView.ItemContainerStyle>
                            <Style TargetType="ListViewItem">
                            <Setter Property="Background" Value="Transparent" />
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="ListViewItem">
                                        <ContentPresenter />
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                       </ListView.ItemContainerStyle>
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <StackPanel
                        Orientation="Vertical"
                        Margin="10,10,0,0"
                        Width="500"
                        Background="White"
                        BorderBrush="NavajoWhite"
                        BorderThickness="2">
                        <TextBlock
                            Margin="5"
                            Foreground="MediumBlue"
                            FontSize="15"
                            VerticalAlignment="Center"
                            TextDecorations="Underline"
                            Text="{Binding table_number_string}"/>
                        <TextBlock
                            Margin="5,0,0,10"
                            Foreground="Black"
                            FontSize="13"
                            VerticalAlignment="Center"
                            Text="{Binding updatedAtString}"/>
                            <ListView
                                ItemsSource="{Binding menuItems}"
                                SelectionMode="None">
                                <ListView.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel
                                        Orientation="Vertical">
                                        <TextBlock
                                            Text="{Binding name}"
                                            FontWeight="SemiBold"
                                            TextWrapping="Wrap"/>
                                        <TextBlock
                                            Text="{Binding specialInstruction}"
                                            Foreground="Red"
                                            TextWrapping="Wrap"
                                            Margin="15,0,0,0"/>
                                    </StackPanel>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </StackPanel>
                   </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </ScrollViewer>

